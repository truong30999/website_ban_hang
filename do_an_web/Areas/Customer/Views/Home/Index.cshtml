@model List<do_an_web.Models.Product>

<br />
<div class="row">
    @foreach(var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size:23px; color:steelblue">@product.Product_Name</label>
                    </h4> 
                </div>
                <div style="width:350px;height:260px">
                    <img class="card-img-top" style=" max-width:100%; max-height:100%; object-fit:scale-down"  src="@product.Image" alt="Card Image" />
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px ;color:#a55313"><b>@product.Price</b><b>đ</b></label>
                        </div>
                        <a asp-action="Details"  asp-controller="Home" class="btn btn-outline-info " asp-route-id="@product.Id" >View Details</a>
                    </div>  
                    <div ><i>Lượt xem: @product.ViewNumber</i></div>
                </div>
            </div>
        </div>

    }




</div>

