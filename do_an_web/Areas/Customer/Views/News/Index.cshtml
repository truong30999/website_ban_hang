@model List<do_an_web.Models.News>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

@{ int idMax = Model[0].Id; }
@foreach (var item in Model)
{
    if (item.Id >= idMax)
    {
        idMax = item.Id;
    }
}
@{var itemHead = Model.Where(m => m.Id == idMax).FirstOrDefault(); }
<div class="col-12">
    <div class="row">

        <div class="card mb-4" style="background-color:aliceblue">
            <a asp-action="Details" asp-controller="News" asp-route-id="@itemHead.Id">
                <div class="card-body">
                    <div style="width:1111px;height:334px">
                        <img class="card-img-top" style=" max-width:100%; max-height:100%; object-fit:scale-down" src="@itemHead.Image" alt="Card Image" />
                    </div>
                    <h3 class="card-text align-content-center">
                        @itemHead.Tilte
                    </h3>

                </div>
            </a>
            <p style="padding-left:20px">@itemHead.Author - @itemHead.DateCreate</p>
        </div>
    </div>
</div>
<hr />
<br />
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-6">
            <div class="card mb-4" style="background-color:aliceblue">
                <a asp-action="Details" asp-controller="News" asp-route-id="@item.Id">
                    <div class="card-body">
                        <div style="width:350px;height:260px">
                            <img class="card-img-top" style=" max-width:100%; max-height:100%; object-fit:scale-down" src="@item.Image" alt="Card Image" />
                        </div>
                        <h3 class="card-text align-content-center">
                            @item.Tilte
                        </h3>
                    </div>
                </a>
                <p style="padding-left:20px">@item.Author - @item.DateCreate</p>
            </div>
        </div>

    }
</div>


