@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Xóa dữ liệu cá nhân";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="alert alert-warning" role="alert">
    <p>
        <strong>Xóa dữ liệu này sẽ xóa vĩnh viễn tài khoản của bạn và điều này không thể được phục hồi.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post" class="form-group">
        <div asp-validation-summary="All" class="text-danger"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-group">
                <label asp-for="Input.Password">Mật khẩu</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Xóa dữ liệu và khóa tài khoản của bạn</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}