<!--Sinh viên thực hiện: Nguyễn Nhật Trường-->
@model do_an_web.Models.ViewModel.OrderDetailViewModel
@using do_an_web.Extensions
@using do_an_web.Utility
@{
    ViewData["Title"] = "Delete";
}

<br />

<h2 class="text-info">Delete Order</h2>


<form method="post">
    <div class="p-4 border rounded row">
        <input hidden asp-for="Order.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-6">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Order.Name" class="control-label"></label>
                </div>
                <div class=" col-8">
                    <input asp-for="Order.Name" readonly class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Order.DateOrder" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Order.DateOrder" readonly type="text" class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Order.Phone" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Order.Phone" readonly class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Order.Email" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Order.Email" readonly class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Order.Address" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Order.Address" readonly class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Order.PaymentMethod" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Order.PaymentMethod" readonly class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Order.TotalPrice" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Order.TotalPrice" readonly class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Order.Status" class="control-label"></label>
                </div>
                <div class="col-8 text-info">
                    @if (Model.Order.Status == 1)
                    {
                        @Html.DisplayName("Paid")
                    }
                    else
                    { @Html.DisplayName("Unpaid")}
                </div>
            </div>



            <div class="form-group">
                <input type="submit" value="Delete" asp-route-id="@Model.Order.Id" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>

        <div class=" col-6">
            @* paricial view *@
            <partial name="~/Views/Shared/_OrderProductDetails.cshtml" model="Model.Products" />
        </div>
</form>





