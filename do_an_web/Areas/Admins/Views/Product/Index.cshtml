@model IEnumerable<do_an_web.Models.Product>

@{
    ViewData["Title"] = "Index";
}


<div class="row">
   <div class="col-6">
        <h2 class="text-info">Product List</h2>
   </div>
<div class="col-6 text-right">
    <a asp-action="Create" class="btn btn-info" ><i class="fas fa-plus"></i>&nbsp; Add New Product</a>
</div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Product Name")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Detail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ViewNumber)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Detail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ViewNumber)
            </td>

            <td>
                <partial name="_TableButtonPartial" model="item.Id" />
            </td>
        </tr>
}
    </tbody>
</table>
