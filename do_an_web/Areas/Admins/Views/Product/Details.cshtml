@model do_an_web.Models.ViewModel.ProductsViewModel
@using do_an_web.Extensions

<br />
<h2>Chi tiết sản phẩm</h2>
<hr />

    <div class="p-4 border rounded row">
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Product_Name" class="control-label">Tên</label>
                </div>
                <div class=" col-8">
                    <input asp-for="Products.Product_Name" readonly class="form-control" />
                </div>
                
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Detail" class="control-label">Chi tiết</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Detail" readonly class="form-control" />
                </div>
               
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Price" class="control-label">Giá</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Price" readonly class="form-control" />
                </div>
               
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Amount" class="control-label">Số lượng</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Amount" readonly class="form-control" />
                </div>

            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.ViewNumber" class="control-label">Lượt xem</label>
                </div>
                <div class=" col-8">
                    <input asp-for="Products.ViewNumber"  class="form-control" readonly />
                </div>
                
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Categories" class="control-label">Loại sản phẩm</label>
                </div>
                <div class=" col-8">
                   <input asp-for="Products.Category.Name" readonly class="form-control" />
                </div>
            </div>
        </div>
        <div class=" col-1">

        </div>
        <div class="col-3">
            <img src="@Model.Products.Image" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9; " />
        </div>

        <div class="form-group">
            <a asp-action="Edit" class="btn btn-danger" asp-route-id="@Model.Products.Id">Sửa</a> |
            <a asp-action="Index" class="btn btn-success">Quay lại danh sách</a>
        </div>
    </div>






