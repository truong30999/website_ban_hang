@model do_an_web.Models.ViewModel.ProductsViewModel
@using do_an_web.Extensions

<br />
<h2>Delete Product</h2>
<hr />


<form method="post" >
    <div class="p-4 border rounded row">
        <input hidden asp-for="Products.Id" />
        
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Product_Name" class="control-label"></label>
                </div>
                <div class=" col-8">
                    <input asp-for="Products.Product_Name" readonly class="form-control" />
                </div>
               
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Detail" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Detail" readonly class="form-control" />
                </div>
               
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Price" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Price" readonly class="form-control" />
                </div>
               
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.ViewNumber" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.ViewNumber"  class="form-control"  readonly />
                </div>
               
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Categories" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Category.Name" class="form-control" readonly />
                </div>
            </div>
        </div>
        <div class=" col-1">

        </div>
        <div class="col-3">
            <img src="@Model.Products.Image" width="100%" style="border-radius:5px; border: 1px solid #bbb9b9; " />
        </div>

        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>





