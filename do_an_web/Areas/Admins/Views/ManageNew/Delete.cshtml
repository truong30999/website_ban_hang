@model do_an_web.Models.News

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-info">Edit News</h1>


<hr />

<form method="post">
    <input hidden asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="Tilte" class="control-label"></label>
                <input asp-for="Tilte" disabled class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Decreption" class="control-label"></label>
                <input asp-for="Decreption" disabled class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" disabled class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DateCreate" class="control-label"></label>
                <input asp-for="DateCreate" disabled type="text" class="form-control" />
            </div>
        </div>
        <div class="col-5">
            @Html.DisplayName("Content")
            <div class=" form-group">
                <textarea asp-for="Detail" disabled cols="64" rows="16"></textarea>
            </div>
        </div>
        <div class="col-3" style="padding-top:24px">
            <img src="@Model.Image" width="100%" style=" border-radius:5px; border: 1px solid #bbb9b9; " />
        </div>
    </div>
    <div class="form-group">
        <input a type="submit" value="Detete News" class="btn btn-primary" /> |
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>




