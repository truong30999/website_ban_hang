@model do_an_web.Models.News

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-info">Edit News</h1>


<hr />

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input hidden asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-4">
            <div class="form-group">
                <label asp-for="Tilte" class="control-label"></label>
                <input asp-for="Tilte" class="form-control" />
                <span asp-validation-for="Tilte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Decreption" class="control-label"></label>
                <input asp-for="Decreption" class="form-control" />
                <span asp-validation-for="Decreption" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" name="files" class="form-control" />

            </div>

            <div class="form-group">
                <label asp-for="DateCreate" class="control-label"></label>
                <input asp-for="DateCreate" type="text" class="form-control" id="datepicker" />
                <span asp-validation-for="DateCreate" class="text-danger"></span>
            </div>
        </div>
        <div class="col-5">
            @Html.DisplayName("Content")
            <div class=" form-group">
                <textarea asp-for="Detail" cols="64" rows="16"></textarea>
                <span asp-validation-for="Detail" class="text-danger"></span>
            </div>
        </div>
        <div class="col-3" style="padding-top:24px">
            <img src="@Model.Image" width="100%" style=" border-radius:5px; border: 1px solid #bbb9b9; " />
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Edit News" class="btn btn-primary" /> |
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</form>
@section Scripts
{
    <script>
        $(function () {
            $("#datepicker").datepicker({

            });
        });
    </script>
}



