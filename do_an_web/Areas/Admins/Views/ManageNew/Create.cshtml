<!--Sinh viên thực hiện: Nguyễn Nhật Trường-->
@model do_an_web.Models.News

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<h1 class="text-info">Thêm tin tức</h1>


<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-4">
                    <div class="form-group">
                        <label asp-for="Tilte" class="control-label">Tiêu đề</label>
                        <input asp-for="Tilte" class="form-control" />
                        <span asp-validation-for="Tilte" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Decreption" class="control-label">Mô tả</label>
                        <input asp-for="Decreption" class="form-control" />
                        <span asp-validation-for="Decreption" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Author" class="control-label">Tác giả</label>
                        <input asp-for="Author" class="form-control" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Image" class="control-label">Hình ảnh</label>
                        <input type="file" name="files" class="form-control" />

                    </div>

                    <div class="form-group">
                        <label asp-for="DateCreate" class="control-label">Ngày viết</label>
                        <input asp-for="DateCreate" value="@DateTime.Now" type="text" class="form-control" id="datepicker" disabled />
                        <span asp-validation-for="DateCreate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-8">
                    @Html.DisplayName("Nội dung")
                    <div class="form-group">


                        <textarea asp-for="Detail" cols="100" rows="16"></textarea>
                        <span asp-validation-for="Detail" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm tin tức" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>




