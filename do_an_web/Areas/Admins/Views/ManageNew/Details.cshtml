<!--Sinh viên thực hiện: Nguyễn Nhật Trường-->
@model do_an_web.Models.News

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-info"> News Details</h1>


<hr />
<div class="row">
    <div class="col-4">
        <div class="form-group">
            <label asp-for="Tilte" class="control-label"></label>
            <input asp-for="Tilte" disabled class="form-control" />

        </div>
        <div class="form-group">
            <label asp-for="Decreption" class="control-label"></label>
            <input asp-for="Decreption" disabled class="form-control" />

        </div>

        <div class="form-group">
            <label asp-for="Author" class="control-label"></label>
            <input asp-for="Author" disabled class="form-control" />

        </div>


        <div class="form-group">
            <label asp-for="DateCreate" class="control-label"></label>
            <input asp-for="DateCreate" disabled class="form-control" />

        </div>
    </div>
    <div class="col-5">
        @Html.DisplayName("Content")
        <div class=" form-group">
            <textarea disabled asp-for="Detail" cols="64" rows="16"></textarea>

        </div>
    </div>
    <div class="col-3" style="padding-top:24px">
        <img src="@Model.Image" width="100%" style=" border-radius:5px; border: 1px solid #bbb9b9; " />
    </div>
</div>
<div class="form-group">
    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>


