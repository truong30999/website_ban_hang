@model IEnumerable<do_an_web.Models.ApplicationCustomer>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Danh sách khách hàng</h2>

    </div>
    <div class="col-6 text-right">
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info"><i class="fas fa-plus"></i> &nbsp; Thêm khách hàng</a>
    </div>
</div>
<br />
<div>
    @if (Model.Count() > 0)
    {
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayName("Tên")
            </th>
            <th>
                @Html.DisplayName("Họ")
            </th>
            <th>
                @Html.DisplayName("Email")
            </th>
            <th>
                @Html.DisplayName("Địa chỉ")
            </th>
            <th>
                @Html.DisplayName("Số điện thoại")
            </th>
            <th>
                @Html.DisplayName("Là khách hàng kể từ")
            </th>
        </tr>
            @foreach (var item in Model)
            {
    <tr>
        <td>
            @Html.DisplayFor(m => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(m => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(m => item.Email)
        </td>
        <td>
            @Html.DisplayFor(m => item.Address)
        </td>
        <td>
            @Html.DisplayFor(m => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(m => item.MemberSince)
        </td>
        @*<td>
            <a class="btn btn-success text-white" asp-action="Lock" asp-route-id="@item.Id">
                <i class="fas-lock-open"></i>
            </a>
        </td>*@
    </tr>
   
        }
        </table>
    }
</div>