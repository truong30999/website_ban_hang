@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

    
    <ul class="navbar-nav navbar-right">
        @if (SignInManager.IsSignedIn(User))
        {           
        
            <li class="nav-item">
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name</a>
            </li>

            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <span><button type="submit" class="nav-link nav-item btn btn-link">Đăng xuất</button></span>
            </form>

        }
        else
        {
            <form class="form-inline" asp-controller="Home" asp-action="Index" method="get">
                <input class="form-control mr-sm-2" size="10" type="text" placeholder="Tìm kiếm" name="id">
                <button class="btn btn-success" type="submit">Tìm kiếm</button>
            </form>

            <li class="nav-item">
                <a class="nav-link " asp-area="Identity" asp-page="/Account/Register">Đăng kí</a>
            </li>
            <li class="nav-item">
                <a class="nav-link " asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
            </li>
        }
    </ul>
