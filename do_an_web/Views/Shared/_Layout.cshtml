                                <a class=" dropdown-item " asp-area="Admins" asp-controller="Product" asp-action="Index">Product</a>
                                <a class=" dropdown-item " asp-area="Admins" asp-controller="ManageNew" asp-action="Index">Manage New</a>
                                <a class=" dropdown-item " asp-area="Admins" asp-controller="ManageContact" asp-action="Index">Manage Contact</a>
                                <a class=" dropdown-item" asp-area="Admins" asp-controller="AdminUsers" asp-action="Index">Admin User</a>
                                <a class=" dropdown-item" asp-area="Admins" asp-controller="Users" asp-action="Index">User</a>
                            </div>
                        </li>

                    }


                    @if (HttpContextAccessor.HttpContext.Session.Get<List<int>>("ssShoppingCart") != null)
                    {
                        <li style="color:white">
                            <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Index" class="nav-link">
                                <i class="fas fa-shopping-cart"></i>&nbsp;
                                @{
                                    var count = HttpContextAccessor.HttpContext.Session.Get<List<int>>("ssShoppingCart").Count();

                                }
                                (@count)
                            </a>
                        </li>
                    }
                    else
                    {
                        <li style="color:white">
                            <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Index" class="nav-link">
                                <i class="fas fa-shopping-cart"></i>&nbsp;
                                (0)
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <main role="main" class="pb-3">
