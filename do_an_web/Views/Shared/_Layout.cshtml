                    <li class="nav-item">
                        <a class="nav-link " asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-area="Customer" asp-controller="News" asp-action="Index">News</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " asp-area="Customer" asp-controller="Contact" asp-action="Create">Contact</a>
                    </li>
                    @if (User.IsInRole(SD.SuperAdminEndUser) || User.IsInRole(SD.AdminEndUser))
                    {
                        <li class="nav-item">
                            <a class="nav-link " asp-area="Admins" asp-controller="Orders" asp-action="Index">Order</a>
                        </li>
                    }

                    @if (User.IsInRole(SD.SuperAdminEndUser))
                    {

                        <li class=" nav-item dropdown">
                            <a class="nav-link dropdown-toggle " href="#" id="navbarDropdown1" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Admin Manager
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown1">
